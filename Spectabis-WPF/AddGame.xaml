      TextElement.FontSize="14" >

    <materialDesign:Card MinHeight="380" MinWidth="580" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid>
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MinWidth="300" Height="55" FontSize="30" FontFamily="Roboto">Silent Fap 2</TextBox>
        </Grid>
