<Page x:Class="Spectabis_WPF.Views.AddGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Spectabis_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="AddGame"
      
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Medium"
      TextElement.FontSize="14" >

    <materialDesign:Card MinHeight="380" MinWidth="580" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBox VerticalAlignment="Top" Margin="10,0,10,0" FontSize="25" HorizontalContentAlignment="Center" >Game Name Here</TextBox>
                <Button Click="SelectGame_Click" Width="150" Margin="65,20" Content="Select File"/>
            </StackPanel>

            <Button x:Name="CompleteButton" Click="Complete_Click" IsEnabled="False" Margin="0,5" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Add Game"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="65" />
                </Grid.RowDefinitions>

                <Image x:Name="BoxPreview" Source="resources/art.jpg" Grid.Row="0"/>
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <CheckBox x:Name="AutoBoxart" Margin="0,5" HorizontalAlignment="Center" Content="Automatic Box art" />
                    <Button Click="SelectBoxart_Click" Width="200" Content="Select Image" />
                </StackPanel>
            </Grid>

        </Grid>
    </materialDesign:Card>
</Page>
